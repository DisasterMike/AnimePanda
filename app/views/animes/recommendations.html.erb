<div
  data-controller="anime-vote typing recommendations-loading"
  data-typing-message-value="<%= @highlighted_comment %>"
  data-action="anime-vote:vote->typing#updateChat"
  data-anime-vote-recos-value="<%= @reco_comments %>"
  >
  <%= render "components/paw_loading" %>
  <div class="d-none">
    <% @reco_comments.each do |comment| %>
      <p data-anime-vote-target="comment">
        <%= comment %>
      </p>
    <% end %>
  </div>
  <div data-action="anime-vote:redirect->recommendations-loading#loading">
    <div class="reco-container" data-controller="reco-refresh">
      <div data-anime-vote-target="animes" data-reco-refresh-target="animes" data-likes=0>
        <%= render "components/reco_anime" %>
      </div>
      <%= render "components/reco_buttons" %>
    </div>
    <%= render "components/panda_button" %>
  </div>
</div>
