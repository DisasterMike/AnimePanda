<div class="buttons p-3">
  <div class="lucky-button d-flex justify-content-center mb-4">
    <button class="btn btn-dark rounded-4">Feeling Lucky</button>
  </div>
  <div class="row m-0">
    <div class="col-4">
      <button class="btn btn-dark rounded-4 h-100 w-100">Action</button>
    </div>
    <div class="col-4">
      <button class="btn btn-dark rounded-4 h-100 w-100">Shounen</button>
      <%# style="background-color: var(--chat-bg);" %>
    </div>
    <div class="col-4">
      <button class="btn btn-dark rounded-4 h-100 w-100">Slice of Life</button>
    </div>
  </div>
</div>
<div class="container popular p-3">
  <div class="d-flex gap-2">
    <h2><i class="fa-solid fa-paw"></i></h2>
    <h2>Popular Anime</h2>
  </div>
  <%# best = @anime.select {|anime|  } %>
  <div class="row">
    <% @random_popular_three.each do |item| %>
      <div class="col-12 col-lg-4">
        <%= render "components/popular_anime_card", item: item %>
      </div>
    <% end %>
  </div>
</div>
<div class="container top-anime">
  <div class="d-flex gap-2">
    <h2><i class="fa-solid fa-paw"></i></h2>
    <h2>Top Anime</h2>
  </div>
</div>
