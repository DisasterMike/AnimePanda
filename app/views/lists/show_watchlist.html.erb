<div>
  <h1>My Show Watchlist</h1>
</div>
<div class="show-wrapper">
  <div class="sort-buttons">
    <%= link_to "All", lists_watchlist_path%>

    <%= link_to "Watching", lists_watchlist_path(status: "watching") %>

    <%= link_to "Completed", lists_watchlist_path(status: "completed") %>

    <%= link_to "Dropped", lists_watchlist_path(status: "dropped") %>
  </div>
  <% @bookmarks.each do |list_anime| %>
    <div class="anime-item mb-3">
    <% if list_anime.watch_status == "watching" %>
      <p class="border-top border-dark pt-2 mt-2 text-success"> • <%= list_anime.watch_status %></p>
    <% elsif list_anime.watch_status == "dropped" %>
      <p class="border-top border-dark pt-2 mt-2 text-danger"> • <%= list_anime.watch_status %></p>
    <% else %>
      <p class="border-top border-dark pt-2 mt-2"> • <%= list_anime.watch_status %></p>
    <% end %>

      <h1>Title: <%= list_anime.anime.title %></h1>

      <% if list_anime.anime.picture_url.nil? %>
        <p>Image: Image Empty</p>
      <% end %>

      <p>Start Date: <%= list_anime.anime.start_date %></p>

      <p>Rating: <%= list_anime.anime.rating %></p>

      <p>Rank: <%= list_anime.anime.rank %></p>

      <p>Popularity: <%= list_anime.anime.popularity %></p>

      <p>Synopsis: <%= list_anime.anime.synopsis %></p>

      <p>Studio Name: <%= list_anime.anime.studio %></p>

    </div>
  <% end %>
</div>
