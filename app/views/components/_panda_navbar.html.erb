<div data-controller="navbar-toggle nav-sticky" data-navbar-toggle-user-value="<%= !current_user.nil? %>" class="panda-nav">
  <div data-navbar-toggle-target="navToggle" class="nav-toggle-bar d-flex flex-column">
    <%# <div style="height: 100vh; background-color: rgb(0 0 0 / 32%);"></div> %>
    <div class="px-3">
      <% if current_user.nil? %>
        <div data-navbar-toggle-target="innerElements" class="no-opacity opacity-transition no-width fw-bold d-none"><%= link_to "Log in", new_user_session_path, class: "text-decoration-none text-dark" %></div>
      <% else %>
        <div data-navbar-toggle-target="innerElements" class="no-opacity opacity-transition no-width mb-3 pb-1 fw-bold border-bottom border-2 d-none" style="width: 60%;"><%= link_to "Home", root_path, class: "text-decoration-none text-dark" %></div>
        <div data-navbar-toggle-target="innerElements" class="no-opacity opacity-transition no-width mb-3 pb-1 fw-bold border-bottom border-2 d-none" style="width: 40%;"><%= link_to "Watchlist", lists_watchlist_path, class: "text-decoration-none text-dark" %></div>
        <div data-navbar-toggle-target="innerElements" class="no-opacity opacity-transition no-width mb-3 pb-1 fw-bold d-none"><%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "text-decoration-none text-dark" %></div>
      <% end %>
    </div>
    <div class="d-flex justify-content-end" style="margin: 70px 10px 0 0;">
      <div class="d-flex align-items-center" style="background-color: var(--panda-green); color: var(--panda-white); border-radius: 12px; position: relative; max-width: 48%;">
        <div style="position: absolute; top: -9px; border: 19px solid transparent; border-bottom-color: var(--panda-green); border-top: 0; border-left: 0;"></div>
        <p style="margin: 0; padding: 8px 16px;">Welcome back</p>
      </div>
    </div>
  </div>
  <div class="back-part"></div>
  <div class="front-part d-flex gap-1">
    <div class="left-nav-section flex-grow-1"></div>
    <div data-action="click->navbar-toggle#fire" class="middle-nav-section">
      <%= image_tag "PandaLogo.png", width: "45px", class: "nav-interaction" %>
    </div>
    <div class="right-nav-section flex-grow-1"></div>
  </div>
</div>
